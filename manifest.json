{
  "manifest_version": 3,
  "name": "URL Blocker by Time",
  "version": "1.0",
  "description": "Bloque des sites web selon des plages horaires.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "45": "logo/logo_v1_white.png"
  }
}